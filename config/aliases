### Default aliases
alias ll='ls -lFh'
alias la='ls -lFha'
alias l='ls -CF'
alias df='df -h'

# cd
alias back="cd ${OLDPWD}"

### clear
alias c="clear"
alias cl="clear;ls -lFh"
alias cla="clear;ls -lFha"

### chmod
alias chr="chmod 644"
alias chx="chmod 755"

### exit
alias exit="history -c && exit"
alias q="history -c && exit"

### Facter as YAML
alias facter="facter -y"

### Fuck
alias F="fuck"

### GPG
alias gca="gpg-connect-agent updatestartuptty /bye"

### grep
alias grip="grep -i"
alias griP="grep -iP"
alias greP="grep -P"
alias grEp="grep -E"
alias grvp="grep -v"
alias hgrep="history|grep -E"
alias lgrep='ls|grep'

### Hak5
alias wp7="sudo wp7"

### History
alias h='history'

### IP
alias ipe="curl ipinfo.io/ip && printf '\n'"

### Metasploit
alias msf="msfconsole --quiet -x \"db_connect 'user'@'msf'\""

### MySQL
alias mysql="mysql -u $(whoami) -p"

### Python 3
alias va="source ./venv/bin/activate"
alias ve="python -m venv ./venv"
alias www="python -m http.server 8000"

### rm
alias rmf="rm -rf"

### Sensors
alias cputemp="sensors | grep Core"

### Source
alias src="source ${HOME}/.profile && source ${HOME}/.bashrc"

### Speed test
alias speed="speedtest-cli"
