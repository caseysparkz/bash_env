### Default aliases
alias ll='ls -alFh'
alias la='ls -la'
alias l='ls -CF'
alias df='df -h'

### Back
alias back="cd .."

### Clear
alias c="clear"
alias cl="c;ll"

### chmod
alias chr="chmod 644"
alias chx="chmod 755"

### Exit and clear history
alias exit="history -c;exit"
alias quit="exit"

### Facter as YAML
alias facter="facter -y"

### Forticlient VPN
alias forticlient="sudo openfortivpn -c /etc/openfortivpn/primetrust"

### Fuck
alias darn="fuck"

### Google
alias google="BROWSER=lynx googler"

### GPG
alias gpg="gpg2"

### History
alias h='history'
alias hgrep="history|grep -E"

### IP
alias ipe="curl ipinfo.io/ip"

### Metasploit
alias msfconsole="msfconsole --quiet -x \"db_connect ${user}@msf\""

### MySQL
alias mysql="mysql -u user -p"

### Python 3
alias va="source ./venv/bin/activate"
alias ve="python -m venv ./venv"
alias www="python -m http.server 8000"

### rm
alias rmf="rm -rf"

### Sensors
alias cputemp="sensors | grep Core"

### Source
alias src="source ~/.profile"

### Speed test
alias speed="speedtest-cli --server 2406 --simple"

### Sudo
alias please="sudo -E"
